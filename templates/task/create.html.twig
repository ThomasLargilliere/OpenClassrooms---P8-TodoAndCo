{% extends 'base.html.twig' %}

{% block title %}Ajout d'une tâche{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('task_create')}) }}
            <div>
                {{ form_label(form.title, 'Nom de la tâche') }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mt-4">
                {{ form_label(form.content, 'Tâche à effectuer') }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-success pull-right">Ajouter</button>
            </div>
        {{ form_end(form) }}

        <a href="{{ path('task_list') }}" class="btn btn-primary mt-4">Retour à la liste des tâches</a>
    </div>
{% endblock %}
